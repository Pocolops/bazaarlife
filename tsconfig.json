{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Updated moduleResolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Updated jsx
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/auth/[...nextauth].js"
, "app/FormElements/InputComponent/index.tsx", "app/FormElements/SelectComponent/index.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
